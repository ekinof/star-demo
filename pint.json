{
    "preset": "laravel",
    "rules": {
        "array_indentation": true,
        "array_syntax": {
            "syntax": "short"
        },
        "blank_line_after_namespace": true,
        "blank_line_before_statement": true,
        "declare_strict_types": true,
        "include": true,
        "is_null": true,
        "no_unused_imports": true,
        "no_useless_else": true,
        "ordered_imports": true,
        "yoda_style": true
    }
}
